---
// Props
const {imageSrc, Name } = Astro.props;
---

<div
  class="flex flex-col gap-s items-center max-w-sm mx-auto p-s"
>
  <img
   loading="lazy"
    src={imageSrc}
    alt={Name}
    class="w-[200px] h-[220px] object-contain mx-auto -mt-ml"
  />
  <div class="-mt-xxxs">
    <p class="text-brown-700 font-medium">{Name}</p>
  </div>
</div>
