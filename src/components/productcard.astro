---
// Props
const { href = "#", imageSrc, brand, productName, price } = Astro.props;
---

<a href={href} class="block max-w-sm mx-auto bg-[#FFFFFF] overflow-hidden p-s hover:shadow-drop25 transition-shadow duration-200">
  <img
    src={imageSrc}
    alt={productName}
    class="w-[380px] h-[380px] object-contain mx-auto -mt-ml bg-white shadow-md"
  />
  <div class="-mt-s">
    <p class="text-brown-600  text-sm uppercase tracking-wide">{brand}</p>
    <div class="flex items-center justify-between mt-xxs">
    <p class="text-brown-600">{productName}</p>
    <p class="text-orange-500  font-bold">{price}</p>
</div>
  </div>
</a>