---
// Props
const {imageSrc, Name, Job, Telefon, Email } = Astro.props;
---

<div
  class="flex flex-col gap-s max-w-sm mx-auto p-s"
>
  <img
    src={imageSrc}
    alt={Name}
    class="w-[200px] h-[220px] object-contain mx-auto -mt-ml"
  />
  <div class="-mt-xxxs text-center">
    <p class="text-brown-700 font-medium">{Name}</p>
   
  </div>
  <div class="-mt-xs font-light">
    <p class="text-brown-700">{Job}</p>
    <p class="text-brown-700">{Telefon}</p>
    <p class="text-brown-700">{Email}</p>

  </div>
</div>
