  <!-- script til tabs -->
  <script>
    // Hent alle buttons og indholdselementer
    const tabButtons = document.querySelectorAll(".tab-button");
    const tabContents = document.querySelectorAll(".tab-content");

    tabButtons.forEach((button) => {
      button.addEventListener("click", () => {
        // Fjern den aktive tilstand fra alle knapper
        tabButtons.forEach((btn) => btn.classList.remove("text-orange-500"));
        // Tilføj aktiv tilstand til den klikkede knap
        button.classList.add("text-orange-500");

        // Skjul alt fanebindhold
        tabContents.forEach((content) => content.classList.add("hidden"));

        // Vis det indhold, der er forbundet med den aktive knap
        const tabId = button.getAttribute("data-tab");
        document.getElementById(tabId).classList.remove("hidden");
      });
    });
  </script>
